                        <Grid DockPanel.Dock="Bottom"
                              Height="28">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    ToolTip="add PredefinedColor"
                                    Margin="3"
                                    Command="{Binding AddColorCommand}">
                                <Button.Resources>
                                    <Style x:Key="stylePath"
                                           TargetType="{x:Type Path}">
