    </Window.Resources>

    <Grid>
        <Grid.InputBindings>
            <models:PolyBinding Command="{Binding ChangeBindingCommand}">
                <models:PolyBinding.Gesture>
                    <models:PolyGesture Key="A" ModifierKeys="Ctrl" />
                </models:PolyBinding.Gesture>
            </models:PolyBinding>
        </Grid.InputBindings>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1" MinWidth="200"/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                        <Setter Property="Padding" Value="5,5,5,5" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Height" Value="45" />
                    </Style>
                </StackPanel.Resources>
                <RadioButton Content="Update Settings" />
                <RadioButton Content="Manage Keybindings" Command="{Binding ShowKeybindingView}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}"/>
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Grid.Column="1" 
                      Grid.Row="1" 
                      Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"/>

        <ScrollViewer Grid.Row="1" Grid.Column="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Frame Name="CurrentPage">
            </Frame>
        </ScrollViewer>
    </Grid>
