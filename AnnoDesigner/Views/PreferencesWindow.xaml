<ui:FluentWindow
    x:Class="AnnoDesigner.PreferencesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:AnnoDesigner.Localization"
    xmlns:local="clr-namespace:AnnoDesigner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModel="clr-namespace:AnnoDesigner.ViewModels"
    Name="Preferences"
    Title="{l:Localize Preferences}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewModel:PreferencesViewModel,
                                     IsDesignTimeCreatable=True}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Icon="/AnnoDesigner;component/icon.ico"
    ResizeMode="NoResize"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1" MinWidth="200" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="421*" />

        </Grid.RowDefinitions>
        <ui:TitleBar
            Title="Preferences"
            Grid.Row="0"
            Grid.ColumnSpan="3" />
        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            LastChildFill="False">
            <ScrollViewer
                MinHeight="200"
                DockPanel.Dock="Top"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <ui:ListView
                        MinHeight="200"
                        DisplayMemberPath="HeaderKeyForTranslation"
                        ItemsSource="{Binding Pages}"
                        SelectedItem="{Binding SelectedItem}" />
                </StackPanel>
            </ScrollViewer>
            <Button
                Height="30"
                Margin="10"
                Command="{Binding CloseWindowCommand}"
                CommandParameter="{Binding ElementName=Preferences}"
                Content="{l:Localize Close}"
                DockPanel.Dock="Bottom" />
        </DockPanel>
        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center" />

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="2"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <Frame Name="CurrentPage" NavigationUIVisibility="Hidden" />
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
